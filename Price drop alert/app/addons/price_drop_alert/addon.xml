<?xml version="1.0"?>
<addon scheme="3.0">
    <id>price_drop_alert</id>
    <version>1.2</version>
    <status>active</status>
    <priority>1001</priority>
    <position>0</position>
    <auto_install>MULTIVENDOR,ULTIMATE</auto_install>
    <default_language>en</default_language>
    <authors>
        <author>
            <name>Pervolo</name>
            <email>info@pervolo.com</email>
            <url>http://pervolo.com</url>
            <phone>+380 (99) 790-57-96</phone>
        </author>
    </authors>
    <settings>
        <sections>
            <section id="general">
                <items>
                    <item id="license_key">
                        <type>input</type>
                        <default_value />
                        <variants />
                    </item>
                    <item id="subscription_confirmation">
                        <type>checkbox</type>
                        <default_value>N</default_value>
                        <variants/>
                    </item>
                    <item id="delete_unsubscribed">
                        <type>checkbox</type>
                        <default_value>–ù</default_value>
                        <variants/>
                    </item>
                    <item id="notify_admin">
                        <type>checkbox</type>
                        <default_value>N</default_value>
                        <variants/>
                    </item>
                    <item id="admin_email">
                        <type>input</type>
                        <default_value />
                        <variants/>
                    </item>
                    <item id="default_price_percent">
                        <type>input</type>
                        <default_value>20</default_value>
                        <variants/>
                    </item>
                </items>
            </section>
        </sections>
    </settings>
    <queries>
        <item for="install">
            DROP TABLE IF EXISTS `?:pda_subscribers`;       
        </item>
        <item for="install">
            CREATE TABLE `?:pda_subscribers` (
              `subscriber_id` mediumint(11) NOT NULL AUTO_INCREMENT,
              `timestamp` int(11) NOT NULL,
              `email` varchar(150) NOT NULL,
              `product_id` mediumint(9) NOT NULL,
              `target_price` double(12,2) NOT NULL DEFAULT '0.00',
              `currency_code` varchar(10) NOT NULL DEFAULT '',
              `last_price` double(12,2) NOT NULL DEFAULT '0.00',
              `notification_type` char(1) NOT NULL DEFAULT 'O',
              `status` char(1) NOT NULL DEFAULT 'P',
              `lang_code` char(2) NOT NULL DEFAULT '',
              `hash` varchar(32) NOT NULL DEFAULT '',
              PRIMARY KEY (`subscriber_id`)
            ) ENGINE=MyISAM AUTO_INCREMENT=25 DEFAULT CHARSET=utf8;            
        </item>
        <item for="uninstall">
            DROP TABLE IF EXISTS `?:pda_subscribers`;
        </item>
    </queries>
</addon>
